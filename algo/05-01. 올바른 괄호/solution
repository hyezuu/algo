import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.InputStreamReader;
import java.io.OutputStreamWriter;
import java.util.*;
// 스택 초보자
public class Main {

    public String solution(String input) {
      Stack<Character> st = new Stack<>();
      if(input.charAt(0)!='('||input.charAt(input.length()-1)!=')'){
          return "NO";
      }
      for(int i=0; i<input.length(); i++){
          if(!st.isEmpty()&&!st.peek().equals(input.charAt(i))){
              st.pop();
          }
          else st.push(input.charAt(i));
      }
      if(!st.isEmpty()){
          return "NO";
      }
      else return "YES";
    }

    public static void main(String[] args) throws Exception {
        Main T = new Main();
        BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
        BufferedWriter bw = new BufferedWriter(new OutputStreamWriter(System.out));
        String input = br.readLine();
        bw.write(T.solution(input));
        bw.flush();
    }
}
//다시풀어보기
import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.InputStreamReader;
import java.io.OutputStreamWriter;
import java.util.*;
//stack -> last in first out
public class Main {

    public String solution(String input) {
      Stack<Character> st = new Stack<>();
      for(int i=0; i<input.length(); i++){
          if(input.charAt(i)=='('){
              st.push('(');
          }
          else {
              if(st.isEmpty()) return "NO";
              else st.pop();
          }
      }
      if(!st.isEmpty()){
          return "NO";
      }
      else return "YES";
    }

    public static void main(String[] args) throws Exception {
        Main T = new Main();
        BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
        BufferedWriter bw = new BufferedWriter(new OutputStreamWriter(System.out));
        String input = br.readLine();
        bw.write(T.solution(input));
        bw.flush();
    }
}
//괄호 , 쌍 -> 스택쓰는문제 !!. 쌍의 한가지 (첫번째)만 push, 나머지는 pop
//isEmpty! push , pop , peek!
//ref
import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.InputStreamReader;
import java.io.OutputStreamWriter;
import java.util.*;

//stack -> last in first out
public class Main {
    public String solution(String input) {
        String answer = "YES";
        Stack<Character> stack = new Stack<>();
        for(char x : input.toCharArray()){
            if(x=='(') stack.push(x);
            else{
                if(stack.isEmpty())return "NO";//닫는게 더 많음
                stack.pop();
            }
        }
        if(!stack.isEmpty()) return "NO";//여는게 더 많음
        return answer;
    }

    public static void main(String[] args) throws Exception {
        Main T = new Main();
        BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
        BufferedWriter bw = new BufferedWriter(new OutputStreamWriter(System.out));
        String input = br.readLine();
        bw.write(T.solution(input));
        bw.flush();
    }
}